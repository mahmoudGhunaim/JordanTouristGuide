@model JordanTouristGuide.ViewModels.AuthPageViewModel
@{
    ViewData["Title"] = Model.ActiveTab == "register" ? "Sign Up" : "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jordan Tourist Guide</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            background: linear-gradient(135deg, #222933 0%, #1a1f27 50%, #222933 100%);
        }

        .auth-container {
            display: flex;
            width: 100%;
        }

        .auth-left {
            flex: 1;
            background: linear-gradient(135deg, rgba(34, 41, 51, 0.9) 0%, rgba(34, 41, 51, 0.7) 100%),
                        url('https://images.unsplash.com/photo-1580834341580-8c17a3a630ca?q=80&w=1974') center/cover;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 60px;
            color: white;
            position: relative;
        }

        .auth-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(180deg, transparent 0%, rgba(34, 41, 51, 0.5) 100%);
        }

        .auth-left-content {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 500px;
        }

        .auth-logo {
            font-size: 2.5rem;
            font-weight: 700;
            color: #ac9576;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .auth-tagline {
            font-size: 1.3rem;
            opacity: 0.9;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .auth-features {
            text-align: left;
        }

        .auth-feature {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
            padding: 15px;
            background: rgba(255,255,255,0.1);
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }

        .auth-feature i {
            font-size: 1.5rem;
            color: #ac9576;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(172, 149, 118, 0.2);
            border-radius: 50%;
        }

        .auth-feature-text h4 {
            font-size: 1rem;
            margin-bottom: 3px;
        }

        .auth-feature-text p {
            font-size: 0.85rem;
            opacity: 0.7;
        }

        .auth-right {
            width: 500px;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
            overflow-y: auto;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .auth-header h1 {
            color: #222933;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .auth-header p {
            color: #666;
            font-size: 0.95rem;
        }

        .auth-tabs {
            display: flex;
            margin-bottom: 30px;
            border-radius: 10px;
            background: #f5f5f5;
            padding: 5px;
        }

        .auth-tab {
            flex: 1;
            padding: 12px;
            text-align: center;
            cursor: pointer;
            border-radius: 8px;
            font-weight: 600;
            color: #666;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .auth-tab.active {
            background: #ac9576;
            color: white;
        }

        .auth-tab:not(.active):hover {
            background: #e0e0e0;
        }

        .auth-form {
            display: none;
        }

        .auth-form.active {
            display: block;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #222933;
            font-size: 0.9rem;
        }

        .form-group label i {
            margin-right: 8px;
            color: #ac9576;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #fafafa;
        }

        .form-control:focus {
            outline: none;
            border-color: #ac9576;
            background: white;
            box-shadow: 0 0 0 4px rgba(172, 149, 118, 0.1);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .checkbox-group input {
            width: 18px;
            height: 18px;
            accent-color: #ac9576;
        }

        .checkbox-group label {
            margin: 0;
            font-weight: normal;
            cursor: pointer;
        }

        .btn-submit {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #ac9576 0%, #8a7860 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(172, 149, 118, 0.4);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0;
            color: #999;
            font-size: 0.9rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e0e0e0;
        }

        .divider span {
            padding: 0 15px;
        }

        .btn-google {
            width: 100%;
            padding: 14px;
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: all 0.3s ease;
            color: #333;
        }

        .btn-google:hover {
            border-color: #ac9576;
            background: #faf8f5;
            transform: translateY(-2px);
        }

        .btn-google svg {
            width: 20px;
            height: 20px;
        }

        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .alert-error {
            background: #fee;
            color: #c00;
            border-left: 4px solid #c00;
        }

        .alert-success {
            background: #efe;
            color: #060;
            border-left: 4px solid #060;
        }

        .validation-summary {
            background: #fee;
            color: #c00;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #c00;
        }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

        .skip-link {
            text-align: center;
            margin-top: 20px;
        }

        .skip-link a {
            color: #666;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .skip-link a:hover {
            color: #ac9576;
        }

        @@media (max-width: 1024px) {
            .auth-left {
                display: none;
            }

            .auth-right {
                width: 100%;
                max-width: 500px;
                margin: 0 auto;
            }
        }

        @@media (max-width: 600px) {
            .auth-right {
                padding: 30px 20px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .auth-header h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-left">
            <div class="auth-left-content">
                <h1 class="auth-logo">Jordan Tourist Guide</h1>
                <p class="auth-tagline">Discover the beauty and wonders of Jordan. Your gateway to exploring ancient history, natural beauty, and unforgettable experiences.</p>

                <div class="auth-features">
                    <div class="auth-feature">
                        <i class="fas fa-hotel"></i>
                        <div class="auth-feature-text">
                            <h4>Premium Properties</h4>
                            <p>Book luxury hotels and unique accommodations</p>
                        </div>
                    </div>
                    <div class="auth-feature">
                        <i class="fas fa-compass"></i>
                        <div class="auth-feature-text">
                            <h4>Amazing Experiences</h4>
                            <p>Explore Petra, Wadi Rum, Dead Sea and more</p>
                        </div>
                    </div>
                    <div class="auth-feature">
                        <i class="fas fa-shield-alt"></i>
                        <div class="auth-feature-text">
                            <h4>Secure Booking</h4>
                            <p>Safe and easy reservation process</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="auth-right">
            <div class="auth-header">
                <h1>@(Model.ActiveTab == "register" ? "Create Account" : "Welcome Back")</h1>
                <p>@(Model.ActiveTab == "register" ? "Join us to start your Jordan adventure" : "Sign in to continue your journey")</p>
            </div>

            <div class="auth-tabs">
                <a href="/Account/Login@(string.IsNullOrEmpty(Model.ReturnUrl) ? "" : "?returnUrl=" + Model.ReturnUrl)"
                   class="auth-tab @(Model.ActiveTab == "login" ? "active" : "")">Login</a>
                <a href="/Account/Register@(string.IsNullOrEmpty(Model.ReturnUrl) ? "" : "?returnUrl=" + Model.ReturnUrl)"
                   class="auth-tab @(Model.ActiveTab == "register" ? "active" : "")">Sign Up</a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div><i class="fas fa-exclamation-circle"></i> @error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Login Form -->
            <div class="auth-form @(Model.ActiveTab == "login" ? "active" : "")" id="loginForm">
                <form asp-action="Login" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" name="ActiveTab" value="login" />

                    <div class="form-group">
                        <label><i class="fas fa-envelope"></i> Email Address</label>
                        <input type="email" asp-for="Login.Email" class="form-control" placeholder="Enter your email" required />
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-lock"></i> Password</label>
                        <input type="password" asp-for="Login.Password" class="form-control" placeholder="Enter your password" required />
                    </div>

                    <div class="form-group">
                        <div class="checkbox-group">
                            <input type="checkbox" asp-for="Login.RememberMe" id="rememberMe" />
                            <label for="rememberMe">Remember me</label>
                        </div>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </button>
                </form>

                <div class="divider"><span>or continue with</span></div>

                <form asp-action="ExternalLogin" asp-controller="Account" method="post">
                    <input type="hidden" name="provider" value="Google" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn-google">
                        <svg viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        Continue with Google
                    </button>
                </form>
            </div>

            <!-- Register Form -->
            <div class="auth-form @(Model.ActiveTab == "register" ? "active" : "")" id="registerForm">
                <form asp-action="Register" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" name="ActiveTab" value="register" />

                    <div class="form-group">
                        <label><i class="fas fa-user"></i> Full Name</label>
                        <input type="text" asp-for="Register.FullName" class="form-control" placeholder="Enter your full name" required />
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-envelope"></i> Email Address</label>
                        <input type="email" asp-for="Register.Email" class="form-control" placeholder="Enter your email" required />
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-phone"></i> Phone Number</label>
                        <input type="tel" asp-for="Register.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label><i class="fas fa-lock"></i> Password</label>
                            <input type="password" asp-for="Register.Password" class="form-control" placeholder="Min 6 characters" required />
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-lock"></i> Confirm Password</label>
                            <input type="password" asp-for="Register.ConfirmPassword" class="form-control" placeholder="Confirm password" required />
                        </div>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fas fa-user-plus"></i> Create Account
                    </button>
                </form>

                <div class="divider"><span>or continue with</span></div>

                <form asp-action="ExternalLogin" asp-controller="Account" method="post">
                    <input type="hidden" name="provider" value="Google" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn-google">
                        <svg viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        Sign up with Google
                    </button>
                </form>
            </div>

            <div class="skip-link">
                <a href="/"><i class="fas fa-arrow-left"></i> Continue as Guest</a>
            </div>
        </div>
    </div>
</body>
</html>
