@{
    ViewData["Title"] = "Access Denied";
}

<div class="access-denied-page">
    <div class="access-denied-container">
        <div class="icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#c00" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/>
            </svg>
        </div>
        <h1>Access Denied</h1>
        <p>You do not have permission to access this page.</p>
        <p>Please contact an administrator if you believe this is an error.</p>
        <div class="actions">
            <a href="/" class="btn btn-primary">Go to Home</a>
            <a href="/Dashboard" class="btn btn-secondary">Go to Dashboard</a>
        </div>
    </div>
</div>

<style>
    .access-denied-page {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .access-denied-container {
        text-align: center;
        max-width: 500px;
    }

    .access-denied-container .icon {
        margin-bottom: 20px;
    }

    .access-denied-container h1 {
        color: #c00;
        margin-bottom: 15px;
    }

    .access-denied-container p {
        color: #666;
        margin-bottom: 10px;
    }

    .actions {
        margin-top: 30px;
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #ac9576;
        color: white;
    }

    .btn-primary:hover {
        background: #8a7860;
    }

    .btn-secondary {
        background: #222933;
        color: white;
    }

    .btn-secondary:hover {
        background: #1a1f27;
    }
</style>
