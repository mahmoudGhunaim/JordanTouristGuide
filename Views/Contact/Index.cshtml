    <div class="container">
        <h2 class="section-title">Contact Information</h2>
        <div class="grid grid-3">
            <div class="card">
                <div class="card-content" style="text-align: center;">
                    <div style="font-size: 3rem; color: var(--primary-gold); margin-bottom: 1rem;">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h3 style="color: var(--primary-dark); margin-bottom: 0.5rem;">Email</h3>
                    <p style="color: var(--text-gray); word-break: break-word;">
                        <a href="mailto:Mahmoudghunaim132@gmail.com" style="color: var(--text-gray); text-decoration: none;">
                            Mahmoudghunaim132@gmail.com
                        </a>
                    </p>
                </div>
            </div>

            <div class="card">
                <div class="card-content" style="text-align: center;">
                    <div style="font-size: 3rem; color: var(--primary-gold); margin-bottom: 1rem;">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h3 style="color: var(--primary-dark); margin-bottom: 0.5rem;">Phone</h3>
                    <p style="color: var(--text-gray);">
                        <a href="tel:+962789995755" style="color: var(--text-gray); text-decoration: none;">
                            +962 78 999 5755
                        </a>
                    </p>
                </div>
            </div>

            <div class="card">
                <div class="card-content" style="text-align: center;">
                    <div style="font-size: 3rem; color: var(--primary-gold); margin-bottom: 1rem;">
                        <i class="fab fa-linkedin"></i>
                    </div>
                    <h3 style="color: var(--primary-dark); margin-bottom: 0.5rem;">LinkedIn</h3>
                    <p style="color: var(--text-gray);">
                        <a href="https://www.linkedin.com/in/mahmoud-ghunaim-01b658335" target="_blank" style="color: var(--text-gray); text-decoration: none;">
                            Mahmoud Ghunaim
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
